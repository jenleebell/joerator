<div class="content-wrapper container">
  <div class="title-container">
    <h1>rate a joe shoppe</h1>
  </div>

  <form>
    <ul class="list-inline">
      {{#each model as |model|}}
        <li {{action "sendToInput" model}} class="label label-default">{{model.name}}</li>
      {{/each}}
    </ul>

    <div class="form-group">
      <label for="coffeeshop">Choose a coffeeshop from above</label><br>
      {{input readonly=true value=coffeeshop id="coffeeshop" class="form-control"}}
    </div>

    <label for="author">name</label>
    {{input value=author id="author" class="form-control"}}

    <label for="body">body</label>
    {{textarea value=body id="body" class="form-control"}}

    <label for="title">title</label>
    {{input value=title id="title" class="form-control"}}

    <label for="studyRating">can you study there?</label><br>
    <span {{action 'rateStudy' 1}} >{{fa-icon "coffee"}}</span>
    <span {{action 'rateStudy' 2}} >{{fa-icon "coffee"}}</span>
    <span {{action 'rateStudy' 3}} >{{fa-icon "coffee"}}</span>
    <br>

    <label for="qualityRating">hows the coffee?</label><br>
     <span {{action 'rateQuality' 1}} >{{fa-icon "coffee"}}</span>
     <span {{action 'rateQuality' 2}} >{{fa-icon "coffee"}}</span>
     <span {{action 'rateQuality' 3}} >{{fa-icon "coffee"}}</span>
     <br>

    <label for="laptopRating">are there outlets?</label><br>
    <span {{action 'rateLaptop' 1}} >{{fa-icon "coffee"}}</span>
    <span {{action 'rateLaptop' 2}} >{{fa-icon "coffee"}}</span>
    <span {{action 'rateLaptop' 3}} >{{fa-icon "coffee"}}</span>
    <br>

    <label for="hipsterRating">how hipster?</label><br>
    <span {{action 'rateHipster' 1}} >{{fa-icon "coffee"}}</span>
    <span {{action 'rateHipster' 2}} >{{fa-icon "coffee"}}</span>
    <span {{action 'rateHipster' 3}} >{{fa-icon "coffee"}}</span>
    <br>

    <div class="row text-center slight-padding-top">
      <button class="btn btn-default" {{action 'saveCoffeeshop'}}>review shoppe</button>
    </div>
  </form>

</div>

<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="left" title="Tooltip on left">Tooltip on left</button>
